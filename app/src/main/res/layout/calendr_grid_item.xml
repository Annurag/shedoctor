<?xml version="1.0" encoding="utf-8"?>
<com.indglobal.shedoctor.Commans.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rplclndrdatetitem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:rv_centered="true"
    card_view:rv_color="@color/colorPrimary"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true">

    <com.indglobal.shedoctor.Fonts.GouthamBookText
        android:id="@+id/tvClndrGrdItmDate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:textColor="@color/lightBlack"
        android:textSize="11sp"
        android:gravity="center"
        android:text="26"
        android:background="@drawable/oval_with_stroke"/>

    <com.indglobal.shedoctor.Fonts.GouthamBookText
        android:id="@+id/tvClndrGrdItmApnts"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:gravity="center"
        android:text="3"
        android:background="@drawable/ovel_pink"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"/>

    </RelativeLayout>

</com.indglobal.shedoctor.Commans.RippleView>