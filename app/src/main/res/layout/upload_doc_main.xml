<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/logo_lightpink" />

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Welcome to Shedoctr"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/lightBlack"
            android:layout_marginTop="10dp" />

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:text="Upload Medical Registration Certificate "
            android:layout_marginLeft="25dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp">

            <RelativeLayout
                android:id="@+id/rlMedicalCertificate"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/rect_upload_stroke"
                android:visibility="gone">

               <com.indglobal.shedoctor.Fonts.GouthamBookText
                   android:id="@+id/tvMedicalCertificate"
                   android:layout_width="match_parent"
                   android:layout_height="28dp"
                   android:layout_centerVertical="true"
                   android:textColor="@color/colorPrimary"
                   android:textSize="12sp"
                   android:layout_marginLeft="5dp"
                   android:gravity="center"
                   android:singleLine="true"
                   android:layout_marginRight="30dp"/>


                <ImageView
                    android:id="@+id/ivMedicalCertificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cross_pink"
                    android:padding="8dp"
                    android:background="@drawable/rect_upload_stroke"/>

            </RelativeLayout>

            <com.indglobal.shedoctor.Commans.RippleView
                android:id="@+id/tvuploadMedicalCertificate"
                android:layout_width="90dp"
                android:layout_height="25dp"
                ripple:rv_centered="true"
                ripple:rv_color="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect_upload_stroke"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Upload"
                    android:textColor="@color/colorPrimary" />

            </com.indglobal.shedoctor.Commans.RippleView>

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvMedicalCertificateVerify"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center"/>

        </LinearLayout>

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:id="@+id/tvMedicalCertificateReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/fullGray"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightGray"/>


        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:text="Upload Latest Certificate of Medical Degree"
            android:layout_marginLeft="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp">

            <RelativeLayout
                android:id="@+id/rlMedicalDegree"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/rect_upload_stroke"
                android:visibility="gone">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:id="@+id/tvMedicalDegree"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginRight="30dp"/>


                <ImageView
                    android:id="@+id/ivMedicalDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cross_pink"
                    android:padding="8dp"
                    android:background="@drawable/rect_upload_stroke"/>

            </RelativeLayout>

            <com.indglobal.shedoctor.Commans.RippleView
                android:id="@+id/tvuploadMedicalDegree"
                android:layout_width="90dp"
                android:layout_height="25dp"
                ripple:rv_centered="true"
                ripple:rv_color="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect_upload_stroke"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Upload"
                    android:textColor="@color/colorPrimary" />

            </com.indglobal.shedoctor.Commans.RippleView>

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvMedicalDegreeVerify"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>


        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:id="@+id/tvMedicalDegreeReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/fullGray"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightGray"/>


        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:text="Upload Government id"
            android:layout_marginLeft="25dp" />

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:text="(Driving licence,Aadhar Card Passport etc)"
            android:layout_marginLeft="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp">

            <RelativeLayout
                android:id="@+id/rlGovtId"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/rect_upload_stroke"
                android:visibility="gone">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:id="@+id/tvGovtId"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginRight="30dp"/>


                <ImageView
                    android:id="@+id/ivGovtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cross_pink"
                    android:padding="8dp"
                    android:background="@drawable/rect_upload_stroke"/>

            </RelativeLayout>

            <com.indglobal.shedoctor.Commans.RippleView
                android:id="@+id/tvuploadGovtId"
                android:layout_width="90dp"
                android:layout_height="25dp"
                ripple:rv_centered="true"
                ripple:rv_color="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect_upload_stroke"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Upload"
                    android:textColor="@color/colorPrimary" />

            </com.indglobal.shedoctor.Commans.RippleView>

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvGovtIdVerify"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center" />


        </LinearLayout>

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:id="@+id/tvGovtIdReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/fullGray"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightGray"/>



    </LinearLayout>

    <com.indglobal.shedoctor.Commans.RippleView
        android:id="@+id/tvUploadSubmit"
        android:layout_width="130dp"
        android:layout_height="35dp"
        ripple:rv_centered="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_submit_fill"
            android:text="Submit"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"/>

    </com.indglobal.shedoctor.Commans.RippleView>

    <RelativeLayout
        android:id="@+id/rlSelectMain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/toolbar_bottom_shadow"/>

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select from"
            android:textColor="@color/fullGray"
            android:layout_margin="15dp"
            android:textSize="14sp"/>

        <com.indglobal.shedoctor.Commans.RippleView
            android:id="@+id/ivUploadDocAnimCross"
            android:layout_width="39dp"
            android:layout_height="39dp"
            ripple:rv_centered="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp">

            <ImageView
                android:src="@drawable/cross"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp"/>

        </com.indglobal.shedoctor.Commans.RippleView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <com.indglobal.shedoctor.Commans.RippleView
                android:id="@+id/llGallery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                ripple:rv_centered="true"
                ripple:rv_color="@color/colorPrimary"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gallery"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"/>

                    <com.indglobal.shedoctor.Fonts.GouthamBookText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fullGray"/>

                </LinearLayout>

            </com.indglobal.shedoctor.Commans.RippleView>

            <com.indglobal.shedoctor.Commans.RippleView
                android:id="@+id/llCamera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                ripple:rv_centered="true"
                ripple:rv_color="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/camera"
                        android:layout_marginTop="20dp"/>

                    <com.indglobal.shedoctor.Fonts.GouthamBookText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fullGray"/>

                </LinearLayout>

            </com.indglobal.shedoctor.Commans.RippleView>


        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/prgLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress_bar"/>


</RelativeLayout>