<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:src="@drawable/logos"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="The world's first women centric \n online medical video consultation platform"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/fullGray"
            android:gravity="center_horizontal"/>


        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="Documents Successfully Sent"
            android:layout_marginTop="50dp"
            android:textColor="@color/fullGray"
            android:gravity="center_horizontal"/>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/upld_scs"/>

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:layout_marginTop="25dp"
            android:text="@string/upldConfirm"
            android:textColor="@color/fullGray"
            android:gravity="center_horizontal"/>

        <com.indglobal.shedoctor.Commans.RippleView
            android:id="@+id/tvUploadScsComeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ripple:rv_centered="true"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_submit_fill"
                android:text="Come Back and \n Login After Confirmation"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </com.indglobal.shedoctor.Commans.RippleView>

    </LinearLayout>

    </RelativeLayout>