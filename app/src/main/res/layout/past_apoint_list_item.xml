<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/tvPastApntvideocall"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/videocall"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@color/lightGray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock"/>

                    <com.indglobal.shedoctor.Fonts.GouthamBookText
                        android:id="@+id/tvPastLstItmClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6:15 pm"
                        android:textColor="@color/fullGray"
                        android:textSize="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:id="@+id/tvPastLstItmdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30th july 2015"
                    android:textColor="@color/fullGray"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@color/lightGray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:id="@+id/tvpatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient"
                    android:textColor="@color/fullGray"
                    android:textSize="10dp"/>

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:id="@+id/tvPastLstItmname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chandrika P"
                    android:textColor="@color/lightBlack"
                    android:layout_marginTop="3dp"
                    android:textSize="14dp"/>

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:id="@+id/tvPastLstItmpatientid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient ID:SHDCTRFR1234"
                    android:textColor="@color/fullGray"
                    android:textSize="11dp"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="160dp">

            <ImageView
                android:id="@+id/tvPastLstItmsuccessfulimg"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/complete"
                android:layout_gravity="center_vertical"/>

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvPastLstItmsuccessful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:gravity="bottom"
                android:layout_gravity="center_vertical"
                android:text="Successful"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green" />
        </LinearLayout>



        <ImageView
            android:id="@+id/imgnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.indglobal.shedoctor.Commans.RippleView
                android:id="@+id/rplpastapointitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:rv_centered="true"
                card_view:rv_color="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

        </FrameLayout>

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:id="@+id/tvPastLstItmprescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:gravity="bottom"
            android:text="No Prescription Available"
            android:textColor="@color/fullGray"
            android:layout_alignParentBottom="true"
            android:padding="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>