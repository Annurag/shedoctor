<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.indglobal.shedoctor.Fonts.GouthamBookText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College Name"
            android:textColor="@color/fullGray"
            android:textSize="12sp"/>

        <com.indglobal.shedoctor.Fonts.GouthamBookEdit
            android:id="@+id/eteducatnName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rect_grayfill_stroke"
            android:hint="Ex Taxshilla"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@drawable/indicator_black"
            android:textColorHint="@color/fullGray"
            android:textColor="@color/lightBlack"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5dp">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Degree"
                    android:textSize="12sp"
                    android:textColor="@color/fullGray" />

                <com.indglobal.shedoctor.Fonts.GouthamBookEdit
                    android:id="@+id/eteducatnDegree"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rect_grayfill_stroke"
                    android:hint="Ex PHD"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textCursorDrawable="@drawable/indicator_black"
                    android:textColorHint="@color/fullGray"
                    android:textColor="@color/lightBlack"
                    android:layout_marginTop="5dp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <com.indglobal.shedoctor.Fonts.GouthamBookText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="12sp"
                    android:textColor="@color/fullGray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rect_grayfill_stroke"
                    android:layout_marginTop="5dp">

                    <Spinner
                        android:id="@+id/spinEduyear"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Tablet"
                        android:textSize="14sp"
                        android:textColor="@color/lightBlack"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/down"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <com.indglobal.shedoctor.Commans.RippleView
            android:id="@+id/rplEduRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Remove"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/rect_submit_fill"/>

        </com.indglobal.shedoctor.Commans.RippleView>



    </LinearLayout>

</android.support.v7.widget.CardView>