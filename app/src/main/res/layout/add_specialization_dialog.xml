<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_shape">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvReviewShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Enter the area you are specialized in"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <com.indglobal.shedoctor.Fonts.GouthamBookEdit
            android:id="@+id/etDialogSpeclzn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlack"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rect_upload_stroke"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:textCursorDrawable="@drawable/indicator_black"
            android:textSize="13sp"
            android:minHeight="60dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:padding="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvDialogSpeclznCancl"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Cancle"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@+id/tvDialogSpeclznPst"
                android:gravity="center"/>


            <com.indglobal.shedoctor.Fonts.GouthamBookText
                android:id="@+id/tvDialogSpeclznPst"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Save"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

    </LinearLayout>


</RelativeLayout>